# MAPPINGS
map shift+alt+]	next_tab
map shift+alt+[	previous_tab
map alt+w	close_tab
map alt+q	close_os_window
map alt+t	launch --cwd=current --type=tab
map ctrl+shift+enter launch --cwd=current
map alt+d launch --location=hsplit --cwd=current
map alt+shift+d launch --location=vsplit --cwd=current
# map cmd+t new_tab_with_cwd

